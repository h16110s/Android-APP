<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SubActivity">

    <Button
            android:text="Finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/finButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
            android:onClick="finishSub"/>
    <Button
            android:text="Speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spkButton" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/finButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="speech"/>
    <Button
            android:text="recognition"
            android:layout_width="236dp"
            android:layout_height="44dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recButton" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp" android:onClick="srbtn"/>
    <TextView
            android:text="TextView"
            android:layout_width="286dp"
            android:layout_height="31dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/timeLabel" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/recButton" android:textSize="18sp" android:gravity="center"/>
</android.support.constraint.ConstraintLayout>